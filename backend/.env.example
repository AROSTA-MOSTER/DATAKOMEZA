# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=datakomeza_dev

# JWT Secret (Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption Key (Change this in production!)
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-in-prod

# MOSIP Mock Services Configuration
# These URLs point to MOSIP Mock Services (https://github.com/mosip/mosip-mock-services)
# For production, replace with actual MOSIP platform URLs

# MockMDS - MOSIP Device Service (Biometric capture)
MOSIP_MDS_URL=http://localhost:4501

# mock-abis - Automated Biometric Identification System (Deduplication)
MOSIP_ABIS_URL=http://localhost:8081

# mock-sdk - Software Development Kit (Quality check & matching)
MOSIP_SDK_URL=http://localhost:8080

# mock-mv - Master Data Validator
MOSIP_MV_URL=http://localhost:8082

# MOSIP API Configuration (Legacy - for backward compatibility)
MOSIP_API_URL=https://api.mosip.io/v1
MOSIP_API_KEY=mock-api-key-for-development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
